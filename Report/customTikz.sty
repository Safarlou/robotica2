
\usepackage{tikz}
\usetikzlibrary{decorations.text,shapes.misc,fadings,shapes.arrows,shadows}
\usepackage{pgflibraryarrows}

\newcommand{\ArrowNodeStart}[4][scale=1]% options, x, y, text
{
	\begin{scope}[#1]
	
		\draw [rounded corners=1ex] [fill=white!20]
			(-1.5+#2,0.5+#3) --
			(1.5+#2,0.5+#3) --
			(1.5+#2,-0.5+#3) --
			(-1.5+#2,-0.5+#3) --
			cycle;
			
			\node at (#2,#3) {#4};
	
	\end{scope}
}


\newcommand{\ArrowNode}[4][scale=1]% options, x, y, text
{
	\begin{scope}[#1]
	
		\draw [rounded corners=1ex] [fill=white!20]
			(-1.5+#2,0.5+#3) --
			(1.5+#2,0.5+#3) --
			(1.5+#2,-0.5+#3) --
			(0.5+#2,-0.5+#3) --
			(0+#2,-1+#3) --
			(-0.5+#2,-0.5+#3) --
			(-1.5+#2,-0.5+#3) --
			cycle;
			
			\node at (#2,#3-0.075) {#4};
	
	\end{scope}
}

\newcommand{\ArrowNodeEnd}[4][scale=1]% options, x, y, text
{
	\begin{scope}[#1]
	
		\draw [rounded corners=1ex] [fill=white!20]
			(-1.5+#2,0.5+#3) --
			(1.5+#2,0.5+#3) --
			(1.5+#2,-0.5+#3) --
			(-1.5+#2,-0.5+#3) --
			cycle;
			
			\node at (#2,#3-0.075) {#4};
	
	\end{scope}
}
