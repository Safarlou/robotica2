        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="421*"/>
            <ColumnDefinition Width="96*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="canvas" HorizontalAlignment="Left" Height="320" VerticalAlignment="Top" Width="346" MouseMove="canvas_MouseMove" MouseDown="canvas_MouseDown"/>
        <TextBlock Name="text" HorizontalAlignment="Left" Margin="351,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="271" Width="166" Grid.ColumnSpan="2"/>
        <Button Content="Consolidate all" HorizontalAlignment="Left" Margin="351,0,0,0" VerticalAlignment="Top" Width="166" Click="ConsolidateAll" Grid.ColumnSpan="2"/>
        <Button Content="Consolidate step" HorizontalAlignment="Left" Margin="351,22,0,0" VerticalAlignment="Top" Width="166" Click="ConsolidateStep" Grid.ColumnSpan="2"/>
